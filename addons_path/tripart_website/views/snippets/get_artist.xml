<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- template for our snippet -->
    <template id="get-artist" name="Get Artist - Dynamic">
        <section class="get-artist s_media_list pb32 o_cc o_cc5 o_colored_level pt0">
            <div class="container">
                <div class="text-center py-5">
                    <h2 class="h1">Get Artist</h2>
                    <p>Lorem ipsum is placeholder text commonly used in the graphic, print, and publishing industries for <br/>previewing layouts and visual mockups.</p>
                </div>

                <!-- element to store list of cities using JS -->
                <div class="container" id="tw-artist-row"/>
            </div>
        </section>
    </template>

    <!-- To be used in JS for snippet options -->
    <template id="explore_cities_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='Box']" position="before">
            <div data-js="artist-options" data-selector=".get-artist" data-drop-in=".o_mega_menu nav">
            </div>
        </xpath>
    </template>
</odoo>